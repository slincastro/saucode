{
  "name": "sauco-de",
  "displayName": "Sauco Configuration",
  "description": "Configure Sauco API URL and settings",
  "version": "0.0.1",
  "publisher": "saucode",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:sauco-de.configure",
    "onCommand:sauco-de.analyzeCode",
    "onView:saucoView",
    "onView:saucoConfigView",
    "onView:saucoAnalysisView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sauco-explorer",
          "title": "Sauco",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "sauco-explorer": [
        {
          "id": "saucoView",
          "name": "Sauco Explorer"
        },
        {
          "id": "saucoConfigView",
          "name": "API Configuration",
          "type": "webview"
        },
        {
          "id": "saucoAnalysisView",
          "name": "Code Analysis",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "sauco-de.configure",
        "title": "Sauco: Configure Settings",
        "icon": "$(gear)"
      },
      {
        "command": "sauco-de.analyzeCode",
        "title": "Sauco: Analyze Code",
        "icon": "$(beaker)"
      },
      {
        "command": "sauco-de.applyCode",
        "title": "Sauco: Apply Code",
        "icon": "$(check)"
      }
    ],
    "configuration": {
      "title": "Sauco",
      "properties": {
        "sauco-de.apiUrl": {
          "type": "string",
          "default": "",
          "description": "API URL for Sauco"
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "sauco-de.configure",
          "group": "navigation"
        },
        {
          "command": "sauco-de.analyzeCode",
          "group": "navigation"
        },
        {
          "command": "sauco-de.applyCode",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "sauco-de.configure",
          "when": "view == saucoView",
          "group": "navigation"
        },
        {
          "command": "sauco-de.analyzeCode",
          "when": "view == saucoView",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "sauco-de.configure",
          "title": "Sauco: Configure Settings"
        },
        {
          "command": "sauco-de.analyzeCode",
          "title": "Sauco: Analyze Code"
        },
        {
          "command": "sauco-de.applyCode",
          "title": "Sauco: Apply Code"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "marked": "^16.1.1"
  }
}
